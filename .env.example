# Environment Configuration for Startup Platform

# Server Configuration
PORT=8081

# Authentication Service Configuration
AUTH_SERVICE_URL=http://localhost:8080
REDIRECT_URL=http://localhost:8081

# Database Configuration
# Option 1: Full connection URL (recommended for cloud providers like Neon)
# DB_URL=postgresql://username:password@host:port/database?sslmode=require

# Option 2: Individual settings (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=startup_platform
DB_USER=postgres
DB_PASSWORD=
DB_SSL_MODE=require

# Google OAuth Configuration (handled by auth microservice)
# Note: OAuth client settings are configured in the auth microservice
# CLIENT_ID=your_google_oauth_client_id
# CLIENT_SECRET=your_google_oauth_client_secret

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# Session Configuration
SESSION_TIMEOUT=3600
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
