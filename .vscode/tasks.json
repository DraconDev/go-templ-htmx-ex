{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with debug info",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-gcflags",
        "all=-N -l",
        "-ldflags",
        "-s -w",
        "-o",
        "debug/main",
        "main.go"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": "$go"
    },
    {
      "label": "Clean and build",
      "type": "shell",
      "command": "rm -f debug/main && go mod tidy && go build -gcflags 'all=-N -l' -o debug/main main.go",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$go"
    }
  ]
}
