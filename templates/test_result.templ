package main

import "time"
import 

//go:generate templ generate

templ TestResult(serviceURL string, testType string, status string, message string) {
    <div class="border-l-4 pl-4 py-2">
        <div class="flex items-center space-x-2 mb-2">
            <div class={getStatusColor(status)}>
                {getStatusIcon(status)}
            </div>
            <span class={getStatusTextColor(status) + " font-semibold"}>
                {status}
            </span>
            <span class="text-gray-500 text-sm">{testType}</span>
        </div>
        <div class="text-gray-700 text-sm">
            <div class="font-mono text-xs bg-gray-100 p-2 rounded mb-2">{serviceURL}</div>
            <div>{message}</div>
            <div class="text-gray-500 text-xs mt-1">{time.Now().Format("15:04:05")}</div>
        </div>
    </div>
}
